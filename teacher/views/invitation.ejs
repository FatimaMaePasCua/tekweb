<%include partials/header.ejs%>
  <section class="menu-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-collapse collapse ">
                        <ul id="menu-top" class="nav navbar-nav navbar-left">
                            <li><a href="/classes">Back to Classes</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- MENU SECTION END-->
    <div class="content-wrapper">
        <div class="container">
              <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-head-line">Students </h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        <button class="btn btn-success">Invite Students</button> <br>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID Number</th>
                                            <th>Name </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                            		<% if(students.length !== 0){ students.forEach(function(c){%>
                                        <tr>
                                            <td><%=c.idnumber%></td>
                                            <td><%=c.firstname%> <%=c.lastname%></td>
                                            <td><a href="/inviteSt/<%=c.userID%>/<%=classID%>">Invite</a></td>
                                        </tr>
							        	<% })}else{%>
							        	<tr>
                                            <td>No Available Students.</td>
                                        </tr>
                               		<%}%>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    </div>
                </div>
        </div>
    </div>
    <!-- CONTENT-WRAPPER SECTION END-->
<%include partials/footer.ejs%>
